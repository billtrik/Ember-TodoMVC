<!DOCTYPE html>
<html>
<head>
  <title>Cultural</title>
  <%= stylesheet_link_tag    "bootstrap-flatly.min" %>
  <%= stylesheet_link_tag    "application", media: "all"%>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <script type="text/x-handlebars" id="application">
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a href="../" class="navbar-brand">Cultural.me TODO</a>
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
          <ul class="nav navbar-nav">
            <li>{{#link-to 'todos'}}TODO List{{/link-to}}</li>
            <li>{{#link-to 'about'}}About{{/link-to}}</li>
          </ul>
        </div>
      </div>
    </div>


    <div class="container">
      <div class="row">
        <div class="col-lg-12">{{outlet}}</div>
      </div>
    </div>
  </script>

  <script type="text/x-handlebars" id="about">
    <div class="page-header">
      <h1 id="type">About</h1>
    </div>
    <p> This is the about page </p>
  </script>

  <script type="text/x-handlebars" id="todo">
  {{outlet}}
  </script>


  <script type="text/x-handlebars" id="todo_edit">
    <div class="user-edit">
      <p>
        <label>Title:</label>
        {{input value=title}}
      </p>
      <p>
        <label>Completed:</label>
        {{view Ember.Checkbox checkedBinding="todo.isChecked"}}
      </p>
      <button {{action "save"}}> Save </button>
    </div>
  </script>

  <script type="text/x-handlebars" id="todos">
    <div class="page-header">
      <h1 id="type">TODOs</h1>
    </div>

    <div class="well">{{outlet}}</div>

    <div>TODOs: {{todosCount}}</div>

    {{#link-to 'todos' class="btn btn-success"}} Create {{/link-to}}

    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th class='id_th'>#</th>
          <th>TODO</th>
          <th class='completed_th'>Completed</th>
          <th class='delete_th'>Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#each model}}
        <tr>
          <td>{{id}}</td>
          <td>{{#link-to "todo.edit" this}} {{title}} {{/link-to}}</td>
          <td><button class="btn btn-xs" {{action "this.toggleCompleted"}}>Not Completed</button></td>
          <td><button {{action "delete"}} type="button" class="btn btn-danger btn-xs">Delete</button></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </script>

</body>
</html>
