<!DOCTYPE html>
<html>
<head>
  <title>Cultural</title>
  <%= stylesheet_link_tag    "bootstrap-flatly.min" %>
  <%= stylesheet_link_tag    "application", media: "all"%>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a href="../" class="navbar-brand">Cultural.me TODO</a>
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="navbar-collapse collapse" id="navbar-main">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="themes">TODO list <span class="caret"></span></a>
          <ul class="dropdown-menu" aria-labelledby="themes">
            <li><a tabindex="-1" href="../default/"><span class="glyphicon glyphicon-plus"></span> Create</a></li>
          </ul>
        </li>
        <li><a href="">About</a></li>
      </ul>
    </div>
  </div>
</div>


<div class="container">

  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="type">TODOs</h1>
      </div>

      <button id="new_todo" type="button" class="btn btn-success">Create</button>

      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th class='id_th'>#</th>
            <th>TODO</th>
            <th class='completed_th'>Completed</th>
            <th class='delete_th'>Delete</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>1</td>
            <td>Column content</td>
            <td><input type="checkbox"></td>
            <td><button type="button" class="btn btn-danger btn-xs">Delete</button></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

</div>

</body>
</html>
